rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users: anyone signed in can read all users (for assignment dropdown); users can only write their own doc
    match /users/{userId} {
      allow read: if request.auth != null;
      allow create, update: if request.auth != null && request.auth.uid == userId;
      allow delete: if false;
    }
    // Sprints: any signed-in user can read/write (shared board)
    match /sprints/{sprintId} {
      allow read, write: if request.auth != null;
    }
    // Tasks: any signed-in user can read/write (shared board)
    match /tasks/{taskId} {
      allow read, write: if request.auth != null;
    }
  }
}
